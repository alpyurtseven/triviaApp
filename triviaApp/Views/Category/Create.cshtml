@model Category
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-center">
    <div class="card o-hidden border-0 shadow-lg my-5 w-100" style="height:400px">
        <div class="card-body p-0 mt-5 p-5">
            <form asp-controller="Category" asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name">Kategori Adı</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-5">Yeni Kategori Oluştur</button>
            </form>

        </div>
    </div>

</div>
